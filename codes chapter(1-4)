int main()

{     
    //   Type Declaration Instruction
       float a, b, c, d;
       a = b = c = d = 2.2;
       printf("The value of b is %f.", a + b + c + d);
       
       
       return 0;
}





int main()

{     
    //   Type Conversion
         int a = 4, b = 8;
         printf("The value of a + b is %d. \n", a + b);
         printf("The value of a - b is %d. \n", a - b);
         printf("The value of a * b is %d. \n", a * b);
         printf("The value of b / a is %d. \n", b / a);
         printf("5 when diveded by 2 leaves a remainder %d. \n", 5 % 2);
         printf("5 to the power of 2 is %f. \n", pow(5, 2));
         printf("The value of 5/2 is %d.", 5/2);
         
         
       return 0;
}






int main()
{
    // Operator precedence. Bodmas does not work in C.
    // The priority order is as follows;
    // (1) * / %
    // (2) + - 
    // (3) =
    // Follows left to right associativity when two or more same priority level functions are present.
    int x = 2, y = 3;
    printf("The value of 3*x-8*y is %d.\n", 3 * x - 8 * y);
    printf("The value of 8*y-3*x is %d.\n", 8 * y / 3 * x);

    return 0;
	}






