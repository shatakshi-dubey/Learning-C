{
    //Write a program to sum first 10 natural numbers using while loop.
    int a=1, sum;
    while(a<=10){
        sum+=a;
        a++;
    }
    printf("%d", sum);
    return 0;
}






{
    //Write a program to sum first 10 natural numbers using for loop.
    int i, n=10, sum=0;
    for(i=0; i<=n; i++ ){
        sum+=i;
    }
    printf("%d", sum);
    return 0;
}






{
    //Write a program to sum first 10 natural numbers using do while loop.
    int i=0, n=9, sum=0;
    do{
        i++;
        sum+=i;
        }
        while(i<=n);
        printf("%d", sum);
    
    return 0;
}






{
    //Write a program to calculate the sum of the numbers occuring in the multiplication table of 8 and also print the table of 8.
    int i,n=8,sum;
    for(i=1; i<=10; i++)
    printf("%d*%d=%d\n",n,i,n*i);
    i=1;
    
    do{
        sum+=(n*i);
        i++;
            }
    while(i<=10);
    
    printf("Sum of the numbers occuring in the multiplication table of %d is %d.", n, sum);
    
    return 0;
}






//Write a program to calculate the sum of the numbers occuring in the multiplication table of 8.
    int i,n=8,sum=0;
    for(i=1; i<=10; i++)
    {
        sum=sum+(i*n);
    }
    printf("%d",sum);
    return 0;
}






{//Write a program to calculate the factorial of a give number using for loop.
    int a=0,n,factorial=1;
    scanf("%d",&n);
    for(a=1;a<=n;a++){
        factorial*=a;
    }
    printf("The factorial of number %d is %d.",n,factorial);

    return 0;
}










