int main()
{
    /*Write a program to find out whether a student is pass or fail if it requires total 40% and atleast 33%
    in each subject to pass. Assume 3 subjects and take marks as an input from the user.*/
    int physics, chemistry, maths;
    float total;
    printf("Enter the percentage obtained in physics?\n");
    scanf("%d", &physics);
    printf("Enter the percentage obtained in chemistry? \n");
    scanf("%d", &chemistry);
    printf("Enter the percentage obtained in maths? \n");
    scanf("%d", &maths);
    printf("Your total percentage is %d. \n", (physics + maths + chemistry)/3);
    if((total<40) || (chemistry<33) || (physics<33) || (maths<33))
    {printf("You have been failed.");}
    else 
    {printf("You have been passed.");}
    

    return 0;
}






int main()
{
    /* Calculate income tax paid by an employee to the government as per the slabs mentioned below;
    INCOME SLAB       TAX
    2.5L-5.0L           5%
    5.0L-10.0L        20%
    10.0 and above    30% */
    float tax=0, income;
    printf("Enter your income? \n");
    scanf("%f", &income);
    if(income>=250000 && income<500000){
        tax = tax + 0.05 * (income-250000);
        }
    if(income>=500000 && income<1000000){
        tax = tax + 0.2 * (income-500000);
        }
        if(income>=1000000){
        tax = tax + 0.3 * (income-1000000);
        }
        printf("Tax to be paid is %f.", tax);

    return 0;
}






int main()
{
    
   /*Write a program to find whether a year entered by the user is a leap year or not.
   Take year as am input from the user.*/
int main()
{
    int year;
    printf("Enter a year? \n");
    scanf("%d", &year);
    if(year%4==0){
    printf("The year entered is a leap year.");}
    else{
        printf("The year entered is not a leap year.");}
    
    return 0;
}






int main()
{
    /*Write a program to determine whether a character entered by the user is lowercase or not*/
    /*97-122 = a-z taken from ASCII values*/
    char ch;
    printf("Enter your character? \n");
    scanf("%c", &ch);
    if(ch<=122 && ch>=97){
        printf("Your character %c is lowercase.", ch);
    }
    else{
        printf("Your character %c is uppercase.", ch);
    }
    return 0;
}






int main()
{
    /*Write a program to find greatest of four numbers entered by the user.*/
    int a, b, c, d;
    printf("Enter first number: \n");
    scanf("%d", &a);
    
    printf("Enter second number: \n");
    scanf("%d", &b);
    
    printf("Enter third number: \n");
    scanf("%d", &c);
    
    printf("Enter fourth number: \n");
    scanf("%d", &d);
    
    if(a>b && a>c && a>d){
        printf("The gretest number out of the four is %d.", a);
    }
    else if (b>a && b>c && b>d){
        printf("The gretest number out of the four is %d.", b);
    }
    else if(c>b && c>a && c>d){
        printf("The gretest number out of the four is %d.", c);
    }
    else(d>b && d>c && d>a);{
        printf("The gretest number out of the four is %d.", d);
    }
    return 0;
}






CHAPTER 4 LOOP CONTROL INSTRUCTIONS







int main()
{
//To print numbers in a sequence 
// a++ means a=a+1 (first print then increment)
// ++a means a=a+1 (first increment then print)
    int a=1;
    printf("%d", a);
    a++;
    printf("%d", a);

    return 0;
}






int main()
{
//While loop
    int a;
    scanf("%d", &a);
    while (a<=15){
        printf("%d \n", a);
        a++;
    }
    return 0;
}






int main()
{
    /*Write a program to print natural numbers from 10 to 20 when initial loop counter
    is initialized to 0.*/
    int i=0;
    while(i<=20){
        if(i>=10)
        printf("The value of i is %d. \n", i);
        i++;
    }
    return 0;
}






int main()
{   //valid for ++ and -- both.
    int i = 5;
    //printf("the value of ++i is %d.\nFirst increment then print.", ++i);
    //printf("the value of i++ is %d.\nFirst print then increment.\n", i++);
    printf("the value of i+=10 is %d.", i+=10);
    
    

    return 0;
}






{
    // Do while loop
    int a=1;
    do{
        printf("The value is %d. \n", a);
        a++;
        
    } while(a<=5);

    return 0;
}






{
    // Write a program to print first n natural numbers using do-while loop. 
    int a, b=1;
    printf("Enter the value of n? ");
    scanf("%d", &a);
    do{
        printf("%d \n", b);
        b++;}
        while(b<=a);
    
    return 0;
}






int main()
{
    // For loop
    for(int a=0; a<=10; a++){
        printf("%d \n", a);
    }
    return 0;
}






