       printf("Length of the rectangle is %d. \n", length);
       printf("Breadth of the rectangle is %d. \n", breadth);
       printf("The area of the rectangle is %d. \n", area);
       

                return 0;
}






int main()

{      // Write a C program to calculate area of a rectangle using inputs supplied by the user.
       int length, breadth;
       printf("What is the length of the recatngle? \n");
       scanf("%d", &length);
       printf("What is the breadth of the recatngle? \n");
       scanf("%d", &breadth);     
       printf("The area of your rectangle is %d.", length * breadth);
       
       return 0;
}






int main()

{      //Calculate the area of a circle
       int radius = 3;
       float pi = 3.14;
       printf("Area of the circle is %f.", pi * radius * radius);
       
       
       return 0;
}







int main()

{      //Calculate the volume of a cylinder given its radius and height.
       int r = 3, h = 2;
       float pi = 3.14;
       printf("The volume of your cylinder is %f.", pi * r * r * h);
       
       return 0;
}






int main()

{      //Write a program to convert celsius to farenheit.
       float c = 32;
       float b = 1.8, d;
       printf("Enter the temperature in celsius that you want to convert into farenheit: \n");
       scanf("%f", &d);
       printf("The temperature in farenheit is %f", ((d * b) + c));
       
       
       return 0;
}






int main()

{      /*Write a program to calculate simple interest for a set of values representing principle,
       number of years and rate of interest.*/
       float principle = 100, years = 1, interest = 4;
       printf("Simple interest calculated for the given values is %f.", (principle * years * interest)/100);
       
       
       return 0;
}






